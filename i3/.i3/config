set_from_resource $black       color8  #000000

set $text   #2a3022 
set $transparent #00000000

#class			             border	 backgr	text	indicator child_border
client.focused		       $black  $black	$text	$text     $green	
client.focused_inactive	 $black  $black	$text	$text     $black
client.unfocused	       $black  $black	$text	$text     $black
client.urgent		         $black  $black	$text	$text     $red
client.placeholder	     $black  $black	$text
client.background	       $black 

bar {
    status_command i3blocks
    i3bar_command i3bar -t
    # tray_output none
    modifier $mod
    strip_workspace_numbers yes
    position top

    Colors{
        background $transparent
        statusline $text
	      separator  $text
                           #border        background        text
        focused_workspace  $transparent   $transparent      $green    
	      inactive_workspace $transparent   $transparent      $text 
	      urgent_workspace   $transparent   $transparent      $red 
    }
}

# window borders
for_window [class="^.*"] border pixel 4

# autostart
